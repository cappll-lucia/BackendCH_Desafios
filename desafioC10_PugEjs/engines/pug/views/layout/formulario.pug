doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" 
            integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Formulario
        body(class='bg-dark')
        div(class='container mt-3')
            div(class='jumbotron bg-dark')
                h1(class='text-light text-center') Ingrese los Datos del producto
                br
                form(action="/productos" method='post')
                    div(class='form-group')
                        label(for="id")
                            b(class='text-light') ID
                        input(type="number" id='id' class='form-control bg-dark text-light' name='id' required)
                    div(class='form-group')
                        label(for="name")
                            b(class='text-light') Titulo
                        input(type="text" id='title' class='form-control bg-dark text-light' name='name' required)
                    div(class='form-group')
                        label(for="price")
                            b(class='text-light') Precio
                        input(type="number" id='price' class='form-control bg-dark text-light' name='price' required)
                    div(class='form-group')
                        label(for="src")
                            b(class='text-light') URL Imagen
                        input(type="text" id='imgUrl' class='form-control bg-dark text-light' name='src' required)
                    div(class='d-flex justify-content-center')
                        button(class='btn btn-outline-light mt-3 mb-5') Guardar
            a(href="./productos")
                button(class='btn btn-outline-light') Ver Productos registrados
